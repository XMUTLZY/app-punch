<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="32dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/rl_pubch_title">
        <TextView
            android:text="签到"
            android:textSize="21sp"
            android:textColor="#ff333333"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_punch_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pubch_title"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_punch_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff333333"
            android:text="16计算机科学与技术"/>
        <TextView
            android:id="@+id/tv_punch_classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_default_shadow"
            android:layout_marginTop="5dp"
            android:text="武汉工商学院(考研)"/>
        <TextView
            android:id="@+id/tv_punch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_default_shadow"
            android:layout_marginTop="5dp"
            android:text="2019.07.01-2020.05.10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_punch_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_punch_school"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_punch_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff333333"
            android:text="2020.05.01 星期五"/>
        <TextView
            android:id="@+id/tv_punch_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_default_shadow"
            android:layout_marginTop="5dp"
            android:text="签到范围: 武汉工商学院"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_punch_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_punch_now"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_punch_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_location"/>
        <TextView
            android:id="@+id/tv_punch_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_punch_location"
            android:textSize="17sp"
            android:textColor="#ff333333"
            android:gravity="center_vertical"
            android:text="湖北省武汉市硚口区长顺路104号靠近华生-汉口城市广场"/>
        <ImageView
            android:id="@+id/iv_punch_reload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_reload"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_punch_submit"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/ll_punch_address"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:isHideTimeBackground="true"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowMillisecond="true"
            app:timeTextColor="#000000"
            app:timeTextSize="22sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="#000000"
            app:suffixTextSize="12sp"
            app:suffixHour="时"
            app:suffixMinute="分"
            app:suffixSecond="秒"
            app:suffixMillisecond="毫秒" />
        <TextView
            android:id="@+id/sb_punch_submit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:background="@color/color_ffB419"
            android:text="签到" >
        </TextView>
    </LinearLayout>

</RelativeLayout>