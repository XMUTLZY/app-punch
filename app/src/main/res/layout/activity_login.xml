<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="48dp"
    android:paddingTop="50dp"
    android:paddingRight="48dp"
    android:paddingBottom="32dp">


    <TextView
        android:id="@+id/tv_login_tag"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="用户登陆"
        android:textColor="#333333"
        android:textSize="24dp" />

    <LinearLayout
        android:id="@+id/ll_et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_tag"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:textColorHint="#666666"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#DFDFDF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_et_user_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_et_user_name"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#666666"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#DFDFDF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_et_user_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_et_user_pwd"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_et_user_pwd"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="#00A9F8"
        android:enabled="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#000000"
        android:clickable="true"
        android:textSize="16dp"
        android:focusable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_change_register"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ll_et_user_login"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="没有账号,去注册"
        android:textColor="#576B95"
        android:textSize="14dp" />

</RelativeLayout>